<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="17dp">

    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:background="@drawable/fl_large_rec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/fl_item"
            android:layout_width="137dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/fl_medium_rec">

            <ImageView
                android:id="@+id/img_donut"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_donut1" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_horizontal|bottom|left"
            android:text="Little chicken"
            android:textColor="#0A0004"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_horizontal|bottom|left"
            android:text="R$ 9,99"
            android:textColor="#3E061D"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/heart" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>